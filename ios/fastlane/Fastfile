default_platform(:ios)

platform :ios do
  desc "Build and archive iOS app"
  lane :build do
    # Setup code signing
    setup_ci if is_ci
    
    # Build the app
    build_ios_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.henrikanda.smoothai" => "7BHY8D9X9V.com.henrikanda.smoothai"
        }
      },
      output_directory: "build/ios",
      output_name: "Smooth AI.ipa",
      clean: true,
      archive_path: "build/Runner.xcarchive"
    )
  end

  desc "Upload to App Store Connect"
  lane :upload do
    # Use the .p8 file directly instead of environment variables
    api_key = app_store_connect_api_key(
      key_id: "4V6GWRQFC9",
      issuer_id: "bbd1db28-6a57-409f-860f-cfc657430d67",
      key_filepath: "AuthKey_4V6GWRQFC9.p8"
    )
    
    pilot(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      ipa: lane_context[SharedValues::IPA_OUTPUT_PATH],
      distribute_external: false,
      notify_external_testers: false,
      skip_submission: true
    )
  end

  desc "Build and upload to App Store Connect"
  lane :build_and_upload do
    setup_ci_environment
    build
    upload
  end
  
  desc "Setup CI environment"
  lane :setup_ci_environment do
    # Setup keychain for CI
    setup_ci(
      keychain_name: "login"
    )
    
    # Clean derived data
    clean_build_artifacts
    
    # Install pods
    cocoapods(
      podfile: "Podfile",
      repo_update: true
    )
  end
  
  desc "Debug code signing setup"
  lane :debug_signing do
    puts "Team ID: 7BHY8D9X9V"
    puts "Bundle ID: com.henrikanda.smoothai"
    puts "Xcode version: #{sh('xcodebuild -version')}"
    puts "Available provisioning profiles:"
    sh('security find-identity -v -p codesigning')
  end
end