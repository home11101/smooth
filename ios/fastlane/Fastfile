default_platform(:ios)

platform :ios do
  desc "Build and archive iOS app"
  lane :build do
    # Setup code signing
    setup_ci if is_ci
    
    # Build the app with automatic signing
    build_ios_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      export_options: {
        method: "app-store",
        teamID: "7BHY8D9X9V",
        compileBitcode: false,
        uploadBitcode: false,
        uploadSymbols: false,
        stripSwiftSymbols: true
      },
      output_directory: "build/ios",
      output_name: "Smooth AI.ipa",
      clean: true,
      archive_path: "build/Runner.xcarchive",
      xcargs: "-allowProvisioningUpdates -allowProvisioningDeviceRegistration"
    )
  end
end