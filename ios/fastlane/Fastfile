default_platform(:ios)

platform :ios do
  desc "Build and archive iOS app"
  lane :build do
    # Setup code signing
    setup_ci if is_ci
    
    # Configure automatic signing
    update_code_signing_settings(
      use_automatic_signing: true,
      team_id: "7BHY8D9X9V",
      targets: ["Runner"],
      build_configurations: ["Release"],
      path: "Runner.xcodeproj" # Ajout du path pour plus de clarté
    )
    
    # Build the app with automatic signing
    gym(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      export_options: {
        method: "app-store",
        teamID: "7BHY8D9X9V",
        signingStyle: "automatic",
        # Ajout d'options recommandées pour App Store
        compileBitcode: true,
        uploadBitcode: true,
        uploadSymbols: true,
        stripSwiftSymbols: true
      },
      clean: true,
      output_directory: "build/ios/ipa",
      output_name: "SmoothAI.ipa",
      xcargs: "-allowProvisioningUpdates -allowProvisioningDeviceRegistration DEVELOPMENT_TEAM=7BHY8D9X9V CODE_SIGN_STYLE=Automatic",
      # Ajout pour une meilleure gestion des erreurs
      silent: false,
      skip_package_ipa: false
    )
  end

  desc "Upload to App Store Connect"
  lane :upload do
    pilot(
      api_key_path: ENV["APP_STORE_CONNECT_API_KEY_PATH"],
      skip_waiting_for_build_processing: true,
      # Ajout pour lier explicitement à l'IPA généré
      ipa: lane_context[SharedValues::IPA_OUTPUT_PATH],
      # Options recommandées pour TestFlight
      distribute_external: false,
      notify_external_testers: false,
      skip_submission: true
    )
  end

  desc "Build and upload to App Store Connect"
  lane :build_and_upload do
    build
    upload
  end
  
  # Lane bonus pour debug
  desc "Debug code signing setup"
  lane :debug_signing do
    puts "Team ID: 7BHY8D9X9V"
    puts "Bundle ID: com.henrikanda.smoothai"
    puts "Xcode version: #{sh('xcodebuild -version')}"
    puts "Available provisioning profiles:"
    sh('security find-identity -v -p codesigning')
  end
end