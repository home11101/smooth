default_platform(:ios)

platform :ios do
  desc "Build and archive iOS app"
  lane :build do
    # Setup code signing
    setup_ci if is_ci
    
    # Setup App Store Connect API key
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_filepath: "~/.appstoreconnect/private_keys/AuthKey_#{ENV['APP_STORE_CONNECT_API_KEY_ID']}.p8"
    )
    
    # Sync certificates and profiles
    match(
      type: "appstore",
      api_key: api_key,
      readonly: true,
      force_for_new_devices: true
    )
    
    # Build the app
    build_ios_app(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.henrikanda.smoothai" => "match AppStore com.henrikanda.smoothai"
        }
      },
      output_directory: "build/ios",
      output_name: "Smooth AI.ipa",
      clean: true,
      archive_path: "build/Runner.xcarchive"
    )
  end
end