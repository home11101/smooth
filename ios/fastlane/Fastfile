default_platform(:ios)

platform :ios do
  desc "Build and archive iOS app"
  lane :build do
    # Setup keychain for CI
    setup_ci(
      keychain_name: "login",
      keychain_password: ENV["KEYCHAIN_PASSWORD"] || "password"
    )
    
    api_key = app_store_connect_api_key(
      key_id: ENV["APPSTORECONNECT_API_KEY_KEY_ID"],
      issuer_id: ENV["APPSTORECONNECT_API_KEY_ISSUER_ID"],
      key_content: ENV["APPSTORECONNECT_API_KEY_KEY"]
    )
    match(type: "appstore", api_key: api_key, readonly: true, keychain_password: ENV["KEYCHAIN_PASSWORD"] || "password")
    gym(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      export_options: {
        method: "app-store",
        provisioningProfiles: {
          "com.henrikanda.smoothai" => "match AppStore com.henrikanda.smoothai"
        },
        teamID: "7BHY8D9X9V",
        signingStyle: "manual",
        compileBitcode: true,
        uploadBitcode: true,
        uploadSymbols: true,
        stripSwiftSymbols: true
      },
      clean: true,
      output_directory: "build/ios/ipa",
      output_name: "SmoothAI.ipa",
      xcargs: "-allowProvisioningUpdates -allowProvisioningDeviceRegistration DEVELOPMENT_TEAM=7BHY8D9X9V CODE_SIGN_STYLE=Manual PROVISIONING_PROFILE_SPECIFIER='match AppStore com.henrikanda.smoothai' CODE_SIGN_IDENTITY='Apple Distribution' OTHER_CODE_SIGN_FLAGS='--keychain /Users/runner/Library/Keychains/login.keychain-db'",
      silent: false,
      skip_package_ipa: false,
      build_path: "/tmp/build",
      archive_path: "/tmp/archive"
    )
  end

  desc "Upload to App Store Connect"
  lane :upload do
    # Setup keychain for CI
    setup_ci(
      keychain_name: "login",
      keychain_password: ENV["KEYCHAIN_PASSWORD"] || "password"
    )
    
    api_key = app_store_connect_api_key(
      key_id: ENV["APPSTORECONNECT_API_KEY_KEY_ID"],
      issuer_id: ENV["APPSTORECONNECT_API_KEY_ISSUER_ID"],
      key_content: ENV["APPSTORECONNECT_API_KEY_KEY"]
    )
    match(type: "appstore", api_key: api_key, readonly: true, keychain_password: ENV["KEYCHAIN_PASSWORD"] || "password")
    pilot(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      ipa: lane_context[SharedValues::IPA_OUTPUT_PATH],
      distribute_external: false,
      notify_external_testers: false,
      skip_submission: true
    )
  end

  desc "Build and upload to App Store Connect"
  lane :build_and_upload do
    prepare_ci_environment
    build
    upload
  end
  
  # Lane bonus pour debug
  desc "Debug code signing setup"
  lane :debug_signing do
    puts "Team ID: 7BHY8D9X9V"
    puts "Bundle ID: com.henrikanda.smoothai"
    puts "Xcode version: #{sh('xcodebuild -version')}"
    puts "Available provisioning profiles:"
    sh('security find-identity -v -p codesigning')
  end
  
  desc "Setup project for CI build"
  lane :prepare_ci_environment do
    # Clean derived data
    clean_build_artifacts
    
    # Install pods
    cocoapods(
      podfile: "Podfile",
      repo_update: true
    )
    
    # Setup keychain
    setup_ci(
      keychain_name: "login",
      keychain_password: ENV["KEYCHAIN_PASSWORD"] || "password"
    )
  end
end